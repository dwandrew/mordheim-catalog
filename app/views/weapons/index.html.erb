<p id="notice"><%= notice %></p>

<h1>Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Range</th>
      <th>Strength</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.name %></td>
        <td><%= weapon.cost %></td>
        <td><%= weapon.range %></td>
        <td><%= weapon.strength %></td>
        <table>
        <thead>
        <tr>
        <th>Special Rules</th>
        </tr>
        </thead>
        <tbody>
        <% weapon.special_rules.each do |rule| %>
        <tr>
        <td><%= rule.name %></td>
        <td><%= rule.description %></td>
        </tr>
        </tbody>
        <% end %>
        </table>

        <td><%= link_to 'Show', weapon %></td>
        // <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        // <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

