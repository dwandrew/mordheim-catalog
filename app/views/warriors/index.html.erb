<p id="notice"><%= notice %></p>

<h1>Warriors</h1>

<table>
  <thead>
    <tr>
      <th>Move</th>
      <th>Weapon skill</th>
      <th>Ballistic skill</th>
      <th>Strength</th>
      <th>Toughness</th>
      <th>Wwounds</th>
      <th>Initiative</th>
      <th>Attacks</th>
      <th>Leadership</th>
      <th>Name</th>
      <th>Warrior type</th>
      <th>Warband</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warriors.each do |warrior| %>
      <tr>
        <td><%= warrior.move %></td>
        <td><%= warrior.weapon_skill %></td>
        <td><%= warrior.ballistic_skill %></td>
        <td><%= warrior.strength %></td>
        <td><%= warrior.toughness %></td>
        <td><%= warrior.wwounds %></td>
        <td><%= warrior.initiative %></td>
        <td><%= warrior.attacks %></td>
        <td><%= warrior.leadership %></td>
        <td><%= warrior.name %></td>
        <td><%= warrior.warrior_type %></td>
        <td><%= warrior.warband %></td>
        <td><%= warrior.description %></td>
        <td><%= warrior.cost %></td>
        <td><%= warrior.number %></td>
        <td><%= link_to 'Show', warrior %></td>
        <td><%= link_to 'Edit', edit_warrior_path(warrior) %></td>
        <td><%= link_to 'Destroy', warrior, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

