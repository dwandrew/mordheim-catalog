<p id="notice"><%= notice %></p>

<h1>Special Rules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @special_rules.each do |special_rule| %>
      <tr>
        <td><%= special_rule.name %></td>
        <td><%= special_rule.description %></td>
        <td><%= link_to 'Show', special_rule %></td>
        <td><%= link_to 'Edit', edit_special_rule_path(special_rule) %></td>
        <td><%= link_to 'Destroy', special_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Special Rule', new_special_rule_path %>
